{{!< default}}
<div class="content-area">
    <main class="site-main">
        {{#tag}}
            <section class="taxonomy kg-canvas">
                <header class="single-header kg-width-wide">
                    {{#if feature_image}}
                        <div class="taxonomy-media u-placeholder square">
                            <img class="u-object-fit" src="{{img_url feature_image size="s"}}" alt="{{name}}">
                        </div>
                    {{/if}}
                    <div class="tag-wrapper">
                        <h1 class="single-title">{{name}}</h1>

                        {{#if description}}
                            <div class="single-excerpt">{{description}}</div>
                        {{/if}}
                    </div>
                </header>
            </section>
        {{/tag}}
                
        <section class="kg-canvas">
            {{> featured-minimal}}
        </section>

        <section class="kg-canvas">
            <header class="feed-header">
                {{#if @custom.feed_title}}
                    <div class="feed-header-wrapper">
                        <h2 class="feed-header-title">{{@custom.feed_title}}</h2>
                    </div>
                {{/if}}
            </header>

            <div class="post-feed{{#match @custom.feed_layout "!=" "Minimal"}} expanded{{/match}}{{#match @custom.feed_layout "Right thumbnail"}} right-thumbnail{{/match}}{{#match @custom.feed_layout "Text-only"}} text-only{{/match}}">
            
                {{#foreach posts}}
                    {{> "loop"}}
                {{/foreach}}
                
                {{pagination}}
            </div>
        </section>

    </main>
</div>

{{#contentFor "body_class"}}{{#if next}} paged-next{{/if}}{{#if @member}} logged-in{{/if}}{{/contentFor}}